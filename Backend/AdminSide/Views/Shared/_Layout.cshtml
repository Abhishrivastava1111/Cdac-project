<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Add custom CSS to adjust margin for navigation links */
        .navbar-nav li.nav-item {
            margin-right: 10px; /* Adjust the margin as needed */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>

            <div class="text-end">
                <a href="Login/Logout" class="btn btn-outline-warning">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/Admin/HighLevelReport" class="list-group-item list-group-item-action">View High Level Report</a>
                    <a href="/Admin/ViewEmp" class="list-group-item list-group-item-action">View Employees</a>
                    <a href="/Admin/ViewCampaign" class="list-group-item list-group-item-action">View All Running Campaigns</a>
                    <a href="http://localhost:3000/StartCampaign" class="list-group-item list-group-item-action">Start A Campaign</a>
                </div>
            </div>
            <div class="col-md-6">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">Show Profile</a>
                    <a href="#" class="list-group-item list-group-item-action">Edit Profile</a>
                    <a href="#" class="list-group-item list-group-item-action">Create To Do List</a>
                    <a href="#" class="list-group-item list-group-item-action">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Helpers' planet</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
